{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx", ".sst/types/index.ts"],
  "exclude": ["node_modules", ".sst", ".cache", "build"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "ES2021",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true
  },
  "ts-node": {
    "esm": true
  }
}
