{
  "include": [
    "remix.env.d.ts",
    "sst.env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "domain/**/*.ts",
    "db/**/*.ts",
    "functions/**/*.ts",
    "scripts/**/*.ts",
    ".sst/types/index.ts"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "ES2021",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "noEmit": true
  },
  "ts-node": {
    "esm": true
  }
}
