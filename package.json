{
  "name": "hive-mind-tales",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "sst build",
    "codegen:db": "sst bind 'node scripts/generate-db-types.mjs'",
    "dev:app": "sst bind 'remix dev'",
    "dev:server": "sst dev",
    "deploy:production": "sst deploy --stage production",
    "typecheck": "tsc",
    "update": "sst update && pnpm install && pnpm up -i -L"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "^3.312.0",
    "@aws-sdk/client-ses": "^3.312.0",
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@headlessui/react": "^1.7.14",
    "@planetscale/database": "^1.7.0",
    "@react-hook/size": "^2.1.2",
    "@react-hook/window-size": "^3.1.1",
    "@remix-run/node": "1.15.0",
    "@remix-run/react": "1.15.0",
    "@remix-run/serve": "1.15.0",
    "@remix-validated-form/with-zod": "^2.0.5",
    "@tiptap/core": "2.0.3",
    "@tiptap/extension-character-count": "2.0.3",
    "@tiptap/extension-placeholder": "2.0.3",
    "@tiptap/pm": "2.0.3",
    "@tiptap/react": "2.0.3",
    "@tiptap/starter-kit": "2.0.3",
    "@trpc/client": "^10.20.0",
    "@trpc/server": "^10.20.0",
    "clsx": "^1.2.1",
    "d3": "^7.8.4",
    "d3-hierarchy": "^3.1.2",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "d3-zoom": "^3.0.0",
    "dayjs": "^1.11.7",
    "fast-jwt": "^2.2.1",
    "isbot": "^3.6.8",
    "kysely": "^0.24.2",
    "kysely-planetscale": "^1.3.0",
    "memoize-one": "^6.0.0",
    "mysql2": "^3.2.3",
    "p-retry": "^5.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-textarea-autosize": "^8.4.1",
    "remix-utils": "^6.1.0",
    "remix-validated-form": "^4.6.11",
    "sanitize-html": "^2.10.0",
    "string-strip-html": "^13.2.2",
    "tiny-invariant": "^1.3.1",
    "ulid": "^2.3.0",
    "undici": "^5.21.2",
    "zod": "^3.21.4",
    "zod-form-data": "^2.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.15.0",
    "@remix-run/eslint-config": "1.15.0",
    "@remix-run/server-runtime": "1.15.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/aws-lambda": "^8.10.114",
    "@types/d3-hierarchy": "^3.1.2",
    "@types/d3-selection": "^3.0.5",
    "@types/d3-shape": "^3.1.1",
    "@types/d3-zoom": "^3.0.2",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@types/sanitize-html": "^2.9.0",
    "aws-cdk-lib": "2.72.1",
    "constructs": "10.1.156",
    "eslint": "^8.38.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "kysely-codegen": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "sst": "2.5.2",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    },
    "overrides": [
      {
        "files": [
          "server/**/*.ts"
        ],
        "rules": {
          "react-hooks/rules-of-hooks": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}