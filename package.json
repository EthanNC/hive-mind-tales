{
  "private": true,
  "sideEffects": false,
  "name": "hive-mind-tales",
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "pnpm run generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:sst": "sst dev",
    "dev:css": "pnpm run generate:css --watch",
    "dev:remix": "remix dev",
    "generate:css": "pnpm exec tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "deploy": "sst deploy --stage production",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-brands-svg-icons": "^6.1.1",
    "@fortawesome/free-regular-svg-icons": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@headlessui/react": "^1.7.8",
    "@remix-run/node": "1.11.1",
    "@remix-run/react": "1.11.1",
    "@remix-run/serve": "1.11.1",
    "@tiptap/core": "2.0.0-beta.209",
    "@tiptap/extension-placeholder": "2.0.0-beta.209",
    "@tiptap/react": "2.0.0-beta.209",
    "@tiptap/starter-kit": "2.0.0-beta.209",
    "clsx": "^1.2.1",
    "isbot": "^3.6.5",
    "prosemirror-commands": "^1.5.0",
    "prosemirror-dropcursor": "1.5.0",
    "prosemirror-gapcursor": "^1.3.1",
    "prosemirror-history": "^1.3.0",
    "prosemirror-keymap": "^1.2.0",
    "prosemirror-model": "1.19.0",
    "prosemirror-schema-list": "^1.2.2",
    "prosemirror-state": "^1.4.2",
    "prosemirror-transform": "^1.7.1",
    "prosemirror-view": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.11.1",
    "@remix-run/eslint-config": "1.11.1",
    "@remix-run/server-runtime": "1.11.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "aws-cdk-lib": "2.62.2",
    "constructs": "10.1.156",
    "eslint": "^8.33.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "sst": "2.0.0-rc.64",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}