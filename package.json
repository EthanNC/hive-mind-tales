{
  "private": true,
  "sideEffects": false,
  "name": "hive-mind-tales",
  "scripts": {
    "build": "run-s \"build:*\"",
    "build:css": "pnpm run generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:sst": "sst dev",
    "dev:css": "pnpm run generate:css --watch",
    "dev:remix": "remix dev",
    "generate:css": "pnpm exec tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "deploy": "sst deploy --stage production",
    "typecheck": "tsc",
    "update:dependencies": "sst update && pnpm install && pnpm up -i -L"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.3.0",
    "@fortawesome/free-solid-svg-icons": "^6.3.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@headlessui/react": "^1.7.10",
    "@remix-run/node": "1.11.1",
    "@remix-run/react": "1.11.1",
    "@remix-run/serve": "1.11.1",
    "@remix-validated-form/with-zod": "^2.0.5",
    "@tiptap/core": "2.0.0-beta.217",
    "@tiptap/pm": "2.0.0-beta.217",
    "@tiptap/react": "2.0.0-beta.217",
    "@tiptap/starter-kit": "2.0.0-beta.217",
    "clsx": "^1.2.1",
    "d3": "^7.8.2",
    "d3-hierarchy": "^3.1.2",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "d3-zoom": "^3.0.0",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-validated-form": "^4.6.8",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.20.6",
    "zod-form-data": "^1.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.11.1",
    "@remix-run/eslint-config": "1.11.1",
    "@remix-run/server-runtime": "1.11.1",
    "@tailwindcss/forms": "^0.5.3",
    "@types/d3-hierarchy": "^3.1.2",
    "@types/d3-selection": "^3.0.4",
    "@types/d3-shape": "^3.1.1",
    "@types/d3-zoom": "^3.0.2",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "aws-cdk-lib": "2.62.2",
    "constructs": "10.1.156",
    "eslint": "^8.33.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "sst": "2.0.14",
    "tailwindcss": "^3.2.6",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}